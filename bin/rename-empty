#!/usr/bin/env bash
# Recursively renames any files named "empty" to '.gitkeep".
# If you do not want to act on the entire git root directory, pass in a local path as $1.

if [ -n "$1" ]; then
	DIR=$1
else
	DIR="$( cd -P "$( dirname "$0" )"/.. && pwd )";
fi
find $DIR -name "empty" -exec sh -c 'mv "$0" "${0%empty}.gitkeep"' {} \;
