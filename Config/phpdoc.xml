<?xml version="1.0" encoding="UTF-8" ?>
<phpdoc>
	<title><![CDATA[@TODO: _PROJECT_TITLE_]]></title>

    <files>
		<!-- Create docs for everything in project root. -->
		<directory>../</directory>

		<!-- Except for these folders (relative to "project root", which is the top-most folder containing all matched files.) -->
		<ignore>Config/*</ignore>
		<ignore>Plugin/*</ignore>
		<ignore>Test/*</ignore>
		<ignore>Vendor/*</ignore>
		<ignore>tmp/*</ignore>
		<ignore>bin/*</ignore>
		<ignore>docs/*</ignore>
		<ignore>node_modules/*</ignore>
		<ignore>phpmyadmin/*</ignore>
		<ignore>xhprof/*</ignore>

        <ignore-hidden>true</ignore-hidden>
        <ignore-symlinks>true</ignore-symlinks>
    </files>

    <parser>
        <default-package-name>@TODO: _PROJECT_NAME_</default-package-name>

        <encoding>utf-8</encoding>
        <target>../tmp/docs-build</target>
        <markers>
            <item>@TODO</item>
            <item>@FIXME</item>
        </markers>
        <extensions>
            <extension>php</extension>
        </extensions>
        <visibility></visibility>
    </parser>

    <transformer>
        <target>../tmp/docs/</target>
    </transformer>

    <transformations>
        <template name="responsive-twig"/>
    </transformations>

    <logging>
        <level>error</level>
        <default>../tmp/logs/phpdoc.log</default>
        <errors>../tmp/logs/phpdoc_errors.log</errors>
    </logging>
</phpdoc>
