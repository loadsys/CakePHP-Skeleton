<phpunit colors="true" bootstrap="../Vendor/autoload.php">
	<filter>
		<blacklist>
			<!-- Exclude test directory itself and composer-installed deps. -->
			<directory>../Config</directory>
			<directory>../Test</directory>
			<directory>../lib/Cake</directory>
			<directory>../Lib/Cake</directory>
			<directory>../Vendor</directory>
			<directory>../Plugin/DebugKit</directory>
			<directory>../Plugin/Migrations</directory>
			<!-- Project-specific exclusions. -->
		</blacklist>
	</filter>
	<logging>
		<!-- HTML reports intended to be exported to loadsysdev for viewing. -->
		<log
			type="coverage-html"
			target="../tmp/coverage/html/"
			charset="UTF-8"
			highlight="true"
			lowUpperBound="60"
			highLowerBound="90"
		/>
		<!-- Not currently used, but include the config anyway so it's here already. -->
		<!-- 
		<log
			type="coverage-clover"
			target="../tmp/coverage/clover.xml"
		/>
		-->
	</logging>
	<listeners>
		<listener class="JohnKary\PHPUnit\Listener\SpeedTrapListener" />
	</listeners>
</phpunit>
